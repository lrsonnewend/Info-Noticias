package br.com.dao;

import org.hibernate.HibernateException;
import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;

import br.com.connection.HibernateUtil;
import br.com.model.News;

public class NewsDAO {

	public int saveNews(News news) {
		Session session = null;
		
		Integer insertNews = 0;
		
		SessionFactory sessionFactory = HibernateUtil.getSessionFactory();
		
		try {
			session = sessionFactory.openSession();
			
			Transaction transacion = session.beginTransaction();
			
			insertNews = (Integer) session.save(news);
			
			transacion.commit();
		}catch(HibernateException e) {
			System.err.println("erro ao inserir noticia: "+e);
		}

	}

}
